<?xml version="1.0" encoding="UTF-8"?>
 
<web-app version="3.0"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>RSMU internal questionary tool</display-name>

    <context-param>
        <!-- tell Tapestry where to look for pages, components and mixins -->
        <param-name>tapestry.app-package</param-name>
        <param-value>ru.rsmu.tempoLW</param-value>
    </context-param>

    <filter>
        <!-- define the Tapestry servlet filter -->
        <filter-name>app</filter-name>
        <filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
    </filter>

    <filter-mapping>
        <!-- tell the servlet container which requests to send to the Tapestry servlet filter -->
        <filter-name>app</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>

