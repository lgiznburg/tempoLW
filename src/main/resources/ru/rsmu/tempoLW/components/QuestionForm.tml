<!DOCTYPE html>
<t:container xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

    <div id="questionPreview" class="row">
        <h3>Вопрос № ${readableNumber}. ${current.question.questionInfo.name}</h3>
        <blockquote><p style="font-size: 20pt;">${current.question.text}</p></blockquote>
    </div>
    <t:if test="questionSimple">
        <t:questionsimpleform questionResult="current"/>
    </t:if>
    <t:if test="questionOpen">
        <t:questionopenform questionResult="current"/>
    </t:if>
    <t:if test="questionCorrespondence">
        <t:questioncorrespondenceform questionResult="current"/>
    </t:if>

</t:container>