<!DOCTYPE html>
<t:container xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

    <h4 class="col-sm-offset-2">Answers</h4>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-2"><strong>Text</strong></div>
        <div class="col-sm-4"><strong>Order</strong></div>
    </div>
    <t:loop source="questionSimpleOrder.answerVariants" value="answerVariant" encoder="answerVariantEncoder">
        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-2">
                <t:textfield value="answerVariant.text"/>
            </div>
            <div class="col-sm-4">
                <t:select value="answerVariant.sequenceOrder" model="literal:0,1,2,3,4,5"/>
            </div>
        </div>
    </t:loop>

</t:container>