<!DOCTYPE html>
<t:container xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

    <div id="subjectReview">
        <t:form t:id="subjectForm" class="form-horizontal" validate="subject">
            <div class="row">
                <h4>${title} Subject</h4>  <!--  class="text-center" -->
            </div>

            <t:errors globalOnly="true"/>

            <t:beaneditor t:id="subjectEditor" object="subject" include="title"/>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <t:submit value="Save" class="btn btn-primary"/>
                    <t:eventlink event="cancelEdit" context="subjectId" class="btn btn-default">Cancel</t:eventlink>
                </div>
            </div>
        </t:form>

    </div>
</t:container>
