<!DOCTYPE html>
<t:container xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

<div id="testeesList">
    <div class="row">
        <div class="row">
            <h4>${message:exam} ${exam.name}</h4>
        </div>

        <t:grid t:id="testeesGrid" source="exam.testees" row="testee"
                exclude="id,firstName,middleName,login,password,expirationDate,credentialsExpired"
                add="testResult,printStatement" class="table table-bordered table-hover"
                rowsPerPage="50" pagerPosition="bottom"
                empty="block:emptyTestees">
            <p:testResultCell>
                <t:if test="currentExamResult">
                    <t:if test="currentExamResult.finished">
                        <div class="row">
                            <span class="col-xs-5 text-right"> <span style="font-weight: bold">${currentExamResult.markTotal}</span></span>
                        </div>
                        <p:else><span style="color: darkblue;">${message:exam-not-finished}</span></p:else>
                    </t:if>
                    <p:else><span style="color: darkred;">${message:exam-not-started}</span></p:else>
                </t:if>
            </p:testResultCell>
            <p:printStatementCell>
                <t:if test="currentExamResult">
                    <t:if test="currentExamResult.finished">
                        <div class="row text-center">
                            <span title="${message:exam-statement}" class="col-xs-3"><!-- col-xs-7 -->
                                <t:pagelink page="admin/examtesteeresultrtf" context="[exam,testee]" class="btn btn-info btn-sm" aria-label="Print">
                                    <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
                                </t:pagelink>
                            </span>
                        </div>
                        <p:else>
                            <div class="row text-center">
                            <span title="${message:exam-not-finished-statement}" class="text-center col-xs-3"><!-- col-xs-7 -->
                                <t:pagelink page="admin/examtesteeresultrtf" context="[exam,testee]" class="btn btn-info btn-sm disabled" aria-label="Print">
                                    <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
                                </t:pagelink>
                            </span>
                            </div>
                        </p:else>
                    </t:if>
                    <p:else>
                        <div class="row text-center">
                            <span title="${message:exam-not-started-statement}" class="text-center col-xs-3"><!-- col-xs-7 -->
                                <t:pagelink page="admin/examtesteeresultrtf" context="[exam,testee]" class="btn btn-info btn-sm disabled" aria-label="Print">
                                    <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
                                </t:pagelink>
                            </span>
                        </div>
                    </p:else>
                </t:if>
            </p:printStatementCell>
        </t:grid>

        <br/>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-4">
                <t:eventlink event="cancelTestees" context="examId" class="btn btn-default">${message:cancel}</t:eventlink>
            </div>
            <t:pagelink page="admin/examgeneralstatement" context="[exam]" class="btn btn-primary" aria-label="Print">
                ${message:general-statement}
            </t:pagelink>
        </div>

        <t:block t:id="emptyTestees">
            <div id="noExams">${message:exam-no-testees}</div>
        </t:block>

    </div>
</div>
</t:container>