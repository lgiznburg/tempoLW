<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="2020-10-22-add-send-email-flag" author="leonid">
        <addColumn tableName="exam_schedule">
            <column name="send_emails" type="BIT" defaultValueBoolean="false"/>
        </addColumn>
    </changeSet>
    <changeSet id="2020-10-22-set-send-email-default" author="leonid">
        <update tableName="exam_schedule">
            <column name="send_emails" valueBoolean="false"/>
        </update>
    </changeSet>
</databaseChangeLog>