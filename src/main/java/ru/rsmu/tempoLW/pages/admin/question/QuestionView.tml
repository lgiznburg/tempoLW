<html t:type="layout" t:pageTitle="Администрирование:Просмотр вопроса"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<body>
    <t:admin.question.questionpreview question="question"/>

    <div class="row subquestion-nav">
        <div class="col-sm-4 text-left">
                <t:eventlink event="prevQuestion" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"/>
                </t:eventlink>
        </div>
        <div class="col-sm-4 text-center">
            <t:security.hasAnyRoles roles="admin,subject_admin">
                <t:pagelink page="admin/question/questionedit" context="question" class="btn btn-primary">${message:editQuestion}</t:pagelink>
            </t:security.hasAnyRoles>
            <t:eventlink event="toQuestionList" class="btn btn-default">${message:cancel}</t:eventlink>
        </div>
        <div class="col-sm-4 text-right">
                <t:eventlink event="nextQuestion" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"/>
                </t:eventlink>
        </div>

    </div>
</body>
</html>