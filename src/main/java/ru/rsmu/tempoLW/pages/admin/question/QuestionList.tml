<html t:type="layout" t:pageTitle="Администрирование:Просмотр вопроса"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<body>
<div class="row question-filter">
    <t:form t:id="questionSearch" class="form-inline" async="true">
        <div class="form-group col-sm-4">
            <t:label for="topic"/>:
            <t:select t:id="topic" value="topic" model="topicModel" encoder="topicEncoder" class="form-control" blankLabel="All"
            zone="questionGridZone"/>
        </div>
        <div class="form-group">
            <t:label for="complexity"/>:
            <t:select t:id="complexity" value="complexity" model="literal:1,2,3,4,5"  blankLabel="All" class="form-control"/>
        </div>
        <div class="form-group">
            <t:label for="maxScore"/>:
            <t:select t:id="maxScore" value="maxScore" model="literal:1,2,3,4,5" blankLabel="All" class="form-control"/>
        </div>
        <div class="form-group">
            <t:label for="searchText"/>:
            <t:textfield value="text" t:id="searchText" class="form-control"/>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="${message:searсh}"/>
        </div>
    </t:form>
</div>

<div class="row">
    <div class="col-sm-12">
        <t:zone t:id="questionGridZone">
            <t:grid source="questionDataSource" rowsPerPage="10" pagerPosition="bottom"
                    include="type" add="questionName,complexity,maxScore,questionText,edit" row="question"
                    reorder="questionName,type,complexity,maxScore,questionText">
                <p:questionNameCell>
                    <t:pagelink page="admin/question/questionview" context="question">${question.questionInfo.name}</t:pagelink>
                </p:questionNameCell>
                <p:complexityCell>${question.questionInfo.complexity}</p:complexityCell>
                <p:maxScoreCell>${question.questionInfo.maxScore}</p:maxScoreCell>
                <p:questionTextCell><t:outputraw value="questionText"/></p:questionTextCell>
                <p:editCell>
                    <t:pagelink page="admin/question/questionedit" context="question"><span class="glyphicon glyphicon-pencil" aria-hidden="true"/></t:pagelink>
                </p:editCell>
            </t:grid>
        </t:zone>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-2">
        <t:eventlink event="goToSubject" class="btn btn-default">${message:back-to-subjects}</t:eventlink>
    </div>
</div>

</body>
</html>