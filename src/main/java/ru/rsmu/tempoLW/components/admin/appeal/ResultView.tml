<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
             xmlns:p="tapestry:parameter" >
<t:content>
    <div id="questionView" class="row">
        <h3>${message:question-num} ${readableNumber}. ${current.question.questionInfo.name}</h3>
        <blockquote>
            <p class="text-lg">${current.question.text}</p>
            <t:if test="current.question.image">
                <img class="question-image" src="${imageLink}"/>
            </t:if>
        </blockquote>
    </div>
    <t:delegate to="questionBlock"/>

    <t:block t:id="questionSimple">
        <t:admin.appeal.resultsimpleview current="current"/>
    </t:block>
    <t:block t:id="questionOpen">
        <t:admin.appeal.resultopenview current="current"/>
    </t:block>
    <t:block t:id="questionCorrespondence">
        <t:admin.appeal.resultcorrespondenceview current="current"/>
    </t:block>
    <t:block t:id="questionSimpleOrder">
        <t:admin.appeal.resultsimpleorderview current="current"/>
    </t:block>
    <t:block t:id="questionTree">
        <t:admin.appeal.resulttreeview current="current"/>
    </t:block>
    <t:block t:id="questionFree">
        <t:admin.appeal.resultfreeview current="current"/>
    </t:block>
    <t:block t:id="questionTreeOpen">
        <t:admin.appeal.resulttreeopenview current="current"/>
    </t:block>

</t:content>
</html>